@model MyInvoiceWebApp.Models.Book

<br />
<h2 class="text-info">PAID | BILL</h2>
<br />

<div class="border container" style="padding:30px;">
    <p>please find attached your invoice. Thank you for timely payment.</p>
    <form method="post">
        <div class="form-group row">
            <div class="col-md-4">
                <label for="cars">Invoice No</label>
                <input class="form-control" />
            </div>
            <div class="col-md-4">
                <label for="cars">Language</label>
                <select name="cars" id="cars">
                    <option>English (US)</option>
                </select>
            </div>
            <div class="col-md-4">
                <label for="cars">Currency</label>
                <select name="cars" id="cars">
                    <option>United State Dollar - USD</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                <label for="cars">From : </label>
                <textarea class="form-control" name="comment" form="usrform">Enter text here...</textarea>
            </div>
            <div class="col-md-3">
                <label for="cars">To : </label>
                <textarea class="form-control" name="comment" form="usrform">Enter text here...</textarea>
            </div>
            <div class="col-md-3">
                <label for="cars">Date : </label>
                <input class="form-control" />
            </div>
            <div class="col-md-3">
                <label for="cars">Invoice Due : </label>
                <select name="cars" id="cars">
                    <option>Immediately</option>
                </select>
            </div>
            <div class="col-md-3">
                <label for="cars">Purchase Order Number : </label>
                <input class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <button type="submit" class="btn btn-primary form-control">
                    Create
                </button>
            </div>
            <div class="col-3">
                <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}